<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/shopTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/rtk"

            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginStart="3dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="6dp"
            android:background="@drawable/rtk"
            app:layout_constraintEnd_toStartOf="@+id/stocksBUT"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/shopTV"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageButton
            android:id="@+id/t2"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/sim"
            app:layout_constraintEnd_toEndOf="@+id/rtk"
            app:layout_constraintStart_toStartOf="@+id/rtk"
            app:layout_constraintTop_toBottomOf="@+id/rtk"
            />

        <ImageButton
            android:id="@+id/stocksBUT"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginStart="3dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="6dp"
            android:background="@drawable/promo"

            android:scaleType="fitXY"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/rtk"
            app:layout_constraintTop_toBottomOf="@+id/shopTV"
            app:srcCompat="@drawable/promo_img"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageButton
            android:id="@+id/mts"
            android:layout_width="0dp"

            android:layout_height="60dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/smart"
            app:layout_constraintEnd_toEndOf="@+id/stocksBUT"
            app:layout_constraintStart_toStartOf="@+id/stocksBUT"
            app:layout_constraintTop_toBottomOf="@+id/stocksBUT">

        </ImageButton>

        <ImageButton
            android:id="@+id/Covers"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/phone"
            android:text="Covers"
            app:layout_constraintEnd_toEndOf="@+id/mts"
            app:layout_constraintStart_toStartOf="@+id/mts"
            app:layout_constraintTop_toBottomOf="@+id/mts"

            />

        <ImageButton
            android:id="@+id/Aksy"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/mts"
            android:text="Aksy"
            app:layout_constraintEnd_toEndOf="@+id/t2"
            app:layout_constraintStart_toStartOf="@+id/t2"
            app:layout_constraintTop_toBottomOf="@+id/t2"

            />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>